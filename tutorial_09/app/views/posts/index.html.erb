<p id="notice"><%= notice %></p>
<h1>Posts</h1>
<table border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Public_Flag</th>
      <th>Created_at</th>
      <th>Updated_at</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.public_flag %></td>
        <td><%= post.created_at %></td>
        <td><%= post.updated_at %></td>
        <td><%= link_to 'Show', root_path %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Post', new_post_path %>
