<p id="notice"><%= notice %></p>
<h1>User Detail</h1>
<table border="1"
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Super User Flag</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Birthday</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.password %></td>
              <td><%= user.super_user_flag %></td>
              <td><%= user.phone %></td>
              <td><%= user.address %></td>
              <td><%= user.birthday %></td>
        <td><%= link_to 'Show', user_path(id: user.id) %>
        <%= link_to 'Edit', edit_user_path(user) %>
        <%= link_to 'Destroy', user_path(id: user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
