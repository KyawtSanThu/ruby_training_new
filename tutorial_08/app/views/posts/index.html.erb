<p id="notice"><%= notice %></p>
<h1>Posts</h1>
<table border ="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Public Flag</th>
      <th>User Name</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= posts.title %></td>
        <td><%= posts.description %></td>
        <td><%= posts.public_flag %></td>
        <td><%= posts.user_name %></td>
        <td>
          <%= link_to 'Show', post %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Post', new_post_path %>
